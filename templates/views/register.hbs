<link href="assets/css/login-page.css" rel="stylesheet">

  <main>
   <div class="row">
        <div class="col-md-6 col-lg-4 col-sm-12 mx-auto p-0">
            <div class="card">
                            {{>messages}}
                <div class="login-box">
                    <div class="login-snip"> <input id="tab-1" type="radio" name="tab" class="sign-up"  checked><label for="tab-1" class="tab">Sign up</label>
